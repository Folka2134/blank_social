<%- include('partials/header') -%>
<div id="wrapper" class="z-0" data-configuration="1" data-roundness="1">
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
  <div class="shape"></div>
</div>
<script src="./js/shapes.js"></script>
<main class="z-10">
  <div
    class="h-[600px] w-[300px] sm:w-[450px] flex flex-col justify-center items-center p-12 sm:p-32 shadow-xl bg-[#F5B900] rounded-3xl"
  >
    <h3 class="mb-6 text-red-600 text-3xl self-center">Sign-up</h3>
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="mt-2 text-red-500"><%= el.msg %></div>
    <% }) %> <% } %>
    <div class="flex flex-col mt-2">
      <form class="flex flex-col" action="/signup" method="POST">
        <input
          class="m-2 p-2"
          type="text"
          name="userName"
          placeholder="Username"
        />
        <input
          class="m-2 p-2"
          type="text"
          name="firstName"
          placeholder="First name"
        />
        <input
          class="m-2 p-2"
          type="text"
          name="lastName"
          placeholder="Last name"
        />
        <input class="m-2 p-2" type="text" name="email" placeholder="Email" />
        <input
          class="m-2 p-2"
          type="text"
          name="dob"
          placeholder="Date of Birth"
        />
        <input
          class="m-2 p-2"
          type="text"
          name="password"
          placeholder="Password"
        />
        <input
          class="m-2 p-2"
          type="text"
          name="confirmPassword"
          placeholder="Confirm password"
        />
        <input
          class="bg-[#FDFDFD] active:bg-green-300 border-2 border-grey-200 p-1 px-3 hover:border-green-300 hover:cursor-pointer rounded-md transition-colors"
          type="submit"
          value="Submit"
        />
      </form>
    </div>
    <a class="hover:animate-pulse duration-75" href="/">back</a>
  </div>
</main>
<%- include('partials/footer') -%>
