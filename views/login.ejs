<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/styles.css" />
    <!-- <link href="/path/to/material-icons/iconfont/material-icons.css" /> -->
    <link href="/material-icons/css/material-icons.css" />
    <script
      src="https://kit.fontawesome.com/4664b965c9.js"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body>
    <main class="h-screen w-full flex justify-center items-center">
      <div class="p-32 border-2 border-gray-200">
        <h3 class="text-red-600 text-3xl">Login</h3>
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => {
        %>
        <div class="alert alert-danger text-red-500"><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div class="alert alert-danger text-red-500"><%= el.msg %></div>
        <% }) %> <% } %>
        <div class="flex justify-evenly mt-8">
          <form action="/login" method="POST" class="mb-5">
            <input type="text" name="email" placeholder="email" />
            <input type="text" name="password" placeholder="password" />
            <input
              class="border-2 border-grey-200 p-1 px-3 hover:border-green-300 hover:cursor-pointer rounded-md transition-colors"
              type="submit"
              value="Submit"
            />
          </form>
        </div>
        <a class="hover:animate-pulse duration-75" href="/">back</a>
      </div>
    </main>
  </body>
</html>
